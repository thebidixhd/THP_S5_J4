<div class="container mt-5 form-group">
 <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Prénom' %>
      <%= text_field_tag 'first_name', @user_create.first_name, class:"form-control" %>
      <br /> <br />

			<%= label_tag 'Nom' %>
      <%= text_field_tag 'last_name', @user_create.last_name, class:"form-control" %>
      <br /> <br />

			<%= label_tag 'Âge' %>
      <%= number_field_tag 'age', @user_create.age, class:"form-control" %>
      <br /> <br />

			<%= label_tag 'Description' %>
			<%= text_area_tag 'description', @user_create.description, class:"form-control" %>
			<br /> <br />

			<%= label_tag 'Email' %>
      <%= text_field_tag 'email', @user_create.email, class:"form-control" %>
      <br /> <br />

			<%= label_tag 'Mot de passe' %>
      <%= password_field_tag 'password', class:"form-control" %>
      <br /> <br />

			<%= label_tag 'Confirmation du mot de passe' %>
      <%= password_field_tag 'password_confirmation', class:"form-control" %>
      <br /> <br />

      <%= submit_tag "S'inscrire", class:"btn btn-primary"%>

    <% end %>
</div>
